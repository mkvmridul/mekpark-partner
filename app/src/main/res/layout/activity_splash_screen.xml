<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/white_watermarks"
    android:layout_height="match_parent"
    tools:context=".LoginRelated.Pages.OnBoardingPages.SplashScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/mekpark_logo_red"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mekPark"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"
                android:fontFamily="@font/montserrat_semi_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Park with perfection"
                android:textColor="@color/black"
                android:textSize="8sp"
                android:layout_gravity="end"
                android:fontFamily="@font/gotham_book_regular"/>


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"/>

</FrameLayout>