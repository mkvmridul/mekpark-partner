<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:elevation="8dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/history_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8dp">

                <!--Booking id-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/search_hint"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="8dp">

                    <TextView
                        android:id="@+id/booking_id"
                        style="@style/booking_order"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="#000" />

                    <TextView
                        style="@style/booking_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00 pm" />

                </LinearLayout>

                <!--Main Content-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--Both main view-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal"
                        android:paddingBottom="16dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/model_logo"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginRight="12dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/suzuki" />

                            <TextView
                                android:id="@+id/model_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/model_logo"
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:text="Wagonar R"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/licence_plate_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/model_name"
                                android:layout_marginTop="8dp"
                                android:layout_toRightOf="@id/model_logo"
                                android:fontFamily="@font/gotham_book_regular"
                                android:text="DL1PB3201"
                                android:textSize="12sp" />



                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/payment_confirm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:text="Payment Confirmed "
                                    android:textColor="@color/green"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:id="@+id/payment_confirm_tick"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/tick_green" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/call_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="16dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/phone_green" />

                                <TextView
                                    android:id="@+id/call"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="4dp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:text="Call" />


                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/background4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:singleLine="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="48dp"
                        android:text="Parking Complete"
                        android:textColor="@color/green"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/background4" />

                    <TextView
                        android:id="@+id/need_help"
                        style="@style/need_help"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_border"
            android:padding="16dp"
            android:src="@drawable/u1" />


    </FrameLayout>


</FrameLayout>