<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:elevation="8dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/search_hint"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp">

                    <TextView
                        android:id="@+id/booking_date"
                        style="@style/booking_order"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="00th July, 2015" />

                    <TextView
                        android:id="@+id/booking_time"
                        style="@style/booking_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00 pm" />


                </LinearLayout>

                <!--Main Content-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/order_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="#123"
                        android:drawableRight="@drawable/arrow_right"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/montserrat_medium"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/background4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="16dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="16dp">

                        <ImageView
                            android:id="@+id/model_logo"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="16dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/suzuki" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/model_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/model_logo"
                                android:fontFamily="@font/montserrat_semi_bold"
                                android:text="Wagonar R"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/licence_plate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/model_name"
                                android:layout_marginTop="8dp"
                                android:layout_toRightOf="@id/model_logo"
                                android:fontFamily="@font/gotham_book_regular"
                                android:text="DL1PB3201"
                                android:textSize="12sp" />

                        </LinearLayout>


                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Emergency Towing"
                           android:textColor="@color/red_dark"
                           android:textSize="10sp"
                           android:fontFamily="@font/montserrat_regular"
                           android:layout_gravity="bottom"/>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/background4" />

                    <TextView
                        android:id="@+id/status_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Awaiting Confirmation"
                        android:textColor="@color/red_dark"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:layout_marginLeft="52dp"
                        android:textSize="12sp"
                        android:fontFamily="@font/montserrat_semi_bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/background4" />



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/background4" />

                    <!--Buttons-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/btn1"
                            style="@style/button_style_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Accept" />

                        <TextView
                            android:id="@+id/btn2"
                            style="@style/button_style_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:text="Reject" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_border"
            android:padding="16dp"
            android:src="@drawable/u1" />


    </FrameLayout>

</FrameLayout>